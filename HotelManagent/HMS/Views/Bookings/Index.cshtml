@model BookingPackagesListingModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<div class="row mb-3">
    <div class="col col-lg-12">
        <form>
            <div class="input-group">
                <input type="text" name="searchterm" class="form-control" placeholder="Search..." value="@Model.SearchTerm">
                @if (Model.AccomodationPackages != null && Model.AccomodationPackages.Count() > 0)
                {
                    <select name="AccomodationPackageID" class="form-control">
                        <option value="0">
                            Select Accomodation Package
                        </option>
                        @foreach (var accomodationPackage in Model.AccomodationPackages)
                        {
                            <option value="@accomodationPackage.ID" @(accomodationPackage.ID == Model.AccomodationPackageID ? "selected" : string.Empty)>
                                @accomodationPackage.Name
                            </option>
                        }
                    </select>
                }
                <div class="input-group-append">
                    <button class="btn btn-outline-primary" type="submit"><i class="fas fa-search mr-1"></i> Search</button>
                    <a class="btn btn-outline-secondary" asp-action="Index"><i class="fas fa-redo-alt mr-1"></i> Reset</a>
                    <a asp-action="Create" class="data-btn btn btn-outline-success"><i class="fas fa-plus mr-1"></i>Create</a>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col col-lg-12">
        @{
            Html.RenderPartial("_Listing", Model);
        }
    </div>
</div>