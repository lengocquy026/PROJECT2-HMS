@model AccomodationTypesListingModel

<div class="row">
    <div class="col col-lg-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">
                        Name
                    </th>
                    <th scope="col">
                        Description
                    </th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.AccomodationTypes)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ID" class="data-btn btn btn-primary"><i class="fas fa-pen mr-1"></i>Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.ID" onclick="return confirm('Are you sure you want to delete user : @item.Name')" class="data-btn btn btn-danger">
                                <i class="fas fa-trash-alt mr-1"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>